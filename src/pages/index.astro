---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">
			Hey, i'm Thales <br />
			software developer, keyboard builder, vim user
			<br /> always looking for the next experience
			<br /> I also like when machines makes what i want.
		</h1>
	</section>
	<ul class="mb-4">
		<li>
			Mobile Tech Lead at <a class="font-bold" href="https://www.dentsu.com">Dentsu</a>
		</li>
		<li>
			Graduated Electrical Engineer at <a class="font-bold" href="https://www.unisinos.br/"
				>Unisinos</a
			>
		</li>
		<li>Building Custom Keyboards</li>
		<li>Building blaziling fast code (or at least trying ðŸ˜…)</li>
		<li>You can know more about me <a href="/about" class="font-bold">here</a></li>
	</ul>
	<SocialList />
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
